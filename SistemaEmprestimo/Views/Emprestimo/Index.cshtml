@model IEnumerable<EmprestimoModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-10">
        <h1>Empréstimos Ativos</h1>
        <a class="btn btn-success mx-3">Novo empréstimo</a>
    </div>
    
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Valor</th>
                <th scope="col">Taxa de Juros</th>
                <th scope="col">Data Empréstimo</th>
            </tr>
        </thead>
        <tbody>
            @if(Model is not null){
                @foreach(var emprestimo in Model){
                    <tr>
                        <th scope="row">@emprestimo.Recebedor</th>
                        <td>@emprestimo.ValorEmprestado</td>
                        <td>@emprestimo.TaxaJuros</td>
                        <td>@emprestimo.DataCriacao</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>